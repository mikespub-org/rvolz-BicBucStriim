{% extends 'main.twig' %}


{% block content %}
<section class="series_detail row">
	<header>
		{# Display available metadata only on first page #}
		{% if curpage == 0 %}
			<div id="series-metadata" class="ui-grid-a ui-responsive">
				<div class="ui-block-a">
					<h2>{{page.glob.l10n.booksbyseries}} <em>{{ series.name }}</em></h2>
					{% if series.thumbnail %}
					<img id="series-thumbnail-pic" src="{{page.rot}}/{{series.thumbnail.url}}"/>
					{% endif %}
				</div>
				<div id="series-links" class="ui-block-b">
					<ul id="series-links-list" data-role="listview" data-inset="true" >
					{% if series.link %}
						<li class="series-link link-0">
							<a data-role="button" data-icon="cloud" rel="external" href="{{series.link}}">{{page.glob.l10n.calibre_link}}</a>
						</li>
					{% endif %}
					</ul>
					{% if series.note %}
					<div id="note" data-role="collapsible">
						<h3>{{page.glob.l10n.calibre_notes}}</h3>
						<section id="series-note">
							{{series.note|raw}}
						</section>
					</div>
					{% endif %}
				</div>
			</div>
		{% else %}
			<h2>
				{{page.glob.l10n.booksbyseries}} <em>{{ series.name }}</em>
			</h2> 
		{% endif %}
	</header>
	<div id="filler">&nbsp;</div>
	<section id="series-books">
		<ul data-role="listview">
			{% for book in books %}
				{% include "title_entry.twig" %}
			{% endfor %}	
		</ul>
	</section>
</section>

{% endblock %}
