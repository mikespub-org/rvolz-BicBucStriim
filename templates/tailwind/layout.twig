<!doctype html>
<html class="no-js" lang="{{ page.glob.lang }}">
<head>
    <meta charset="utf-8">
    <title>{{ page.title }}</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    {% block headerlinks %}{% endblock %}
    <link rel="icon" href="{{ page.rot }}/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" href="{{ page.rot }}/bbs-icon.png">
    <link rel="stylesheet" href="{{ page.rot }}/style/{{ page.custom }}/style.css">
    <script src="{{page.rot}}/js/{{ page.custom }}/modernizr-3.11.2.min.js"></script>
    <script src="{{page.rot}}/js/{{ page.custom }}/turbolinks-5.2.0.min.js" defer></script>
    <script src="{{page.rot}}/js/{{ page.custom }}/alpine-turbo-drive-adapter-1.0.1.min.js" defer></script>
    <script src="{{page.rot}}/js/{{ page.custom }}/alpine-magic-helpers-0.5.1.min.js" defer></script>
    <script src="{{page.rot}}/js/{{ page.custom }}/alpine-2.7.3.min.js" defer></script>
    <script src="{{page.rot}}/js/{{ page.custom }}/main.js" defer></script>
</head>
<body class="bg-bgl dark:bg-bgd">
    {# Sticky header with flex box, see https://stackoverflow.com/questions/60169463/tailwindcss-fixed-navbar. #}
    <div class="flex flex-col h-screen px-1 pt-0.5 md:container md:mx-auto">
        {# z-index necessary for nav popups #}
        <div class="z-10">
        {% block header %}{% endblock %}
        </div>
        <div class="flex-1 overflow-y-auto">
            <main >
                <div class=" mx-auto py-6 sm:px-6 lg:px-8 overflow-y-scroll">
                    <div class="px-4 py-6 sm:px-0">
                        <div class="main-border">
                            {% block content %}{% endblock %}
                        </div>
                    </div>
                </div>
            </main>
            {% include "footer.twig" %}
        </div>
    </div>
</body>
</html>