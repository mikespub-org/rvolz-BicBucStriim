{% extends 'main.twig' %}


{% block content %}
<section class="tag_detail row">
	<header>
		{# Display available metadata only on first page #}
		{% if curpage == 0 %}
			<div id="tag-metadata" class="ui-grid-a ui-responsive">
				<div class="ui-block-a">
					<h2>{{page.glob.l10n.booksbytag}} <em>{{ tag.name }}</em></h2>
					{% if tag.thumbnail %}
					<img id="tag-thumbnail-pic" src="{{page.rot}}/{{tag.thumbnail.url}}"/>
					{% endif %}
				</div>
				<div id="tag-links" class="ui-block-b">
					<ul id="tag-links-list" data-role="listview" data-inset="true" >
					{% if tag.link %}
						<li class="tag-link link-0">
							<a data-role="button" data-icon="cloud" rel="external" href="{{tag.link}}">{{page.glob.l10n.calibre_link}}</a>
						</li>
					{% endif %}
					</ul>
					{% if tag.note %}
					<div id="note" data-role="collapsible">
						<h3>{{page.glob.l10n.calibre_notes}}</h3>
						<section id="tag-note">
							{{tag.note|raw}}
						</section>
					</div>
					{% endif %}
				</div>
			</div>
		{% else %}
			<h2>
				{{page.glob.l10n.booksbytag}} <em>{{ tag.name }}</em>
			</h2> 
		{% endif %}
	</header>
	<div id="filler">&nbsp;</div>
	<section id="tag-books">
		<ul data-role="listview">
			{% for book in books %}
				{% include "title_entry.twig" %}
			{% endfor %}	
		</ul>
	</section>
</section>

{% endblock %}
